---
import { getSiteSettings } from '@/lib/keystatic';

const settings = await getSiteSettings();
const siteTitle = settings?.siteTitle || 'Barber';
const logo = settings?.logo;

const navLinks = [
  { label: 'Home', href: '/' },
  { label: 'About', href: '/about' },
  { label: 'Services', href: '/services' },
  { label: 'Portfolio', href: '/portfolio' },
  { label: 'Location', href: '/location' },
  { label: 'Contact', href: '/contact' },
];
---

<header class="header" id="site-header">
  <div class="header-inner container">
    <a href="/" class="header-logo" aria-label={`${siteTitle} - Home`}>
      {logo ? (
        <img src={logo} alt={siteTitle} class="header-logo-img" width="140" height="40" />
      ) : (
        <span class="header-logo-text">{siteTitle}</span>
      )}
    </a>

    <nav class="header-nav" id="main-nav" aria-label="Main navigation">
      <ul class="nav-list" role="list">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class:list={['nav-link', { active: Astro.url.pathname === link.href }]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
      <a href="/booking" class="btn btn-primary nav-cta">Book Now</a>
    </nav>

    <a href="/booking" class="btn btn-primary mobile-cta">Book</a>

    <button
      class="hamburger"
      id="menu-toggle"
      aria-label="Toggle menu"
      aria-expanded="false"
      aria-controls="main-nav"
    >
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    padding: 1rem 1.5rem;
    transition: background-color 0.3s ease, box-shadow 0.3s ease, padding 0.3s ease;
  }

  .header.scrolled {
    background-color: var(--color-bg);
    box-shadow: var(--shadow-lg);
    padding: 0.625rem 1.5rem;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .header-logo {
    text-decoration: none;
    flex-shrink: 0;
  }

  .header-logo-img {
    height: 36px;
    width: auto;
  }

  .header-logo-text {
    font-family: var(--font-heading);
    font-size: 1.375rem;
    font-weight: var(--heading-weight);
    color: var(--color-heading);
    text-transform: var(--heading-transform);
    letter-spacing: var(--heading-tracking);
    line-height: 1;
  }

  .header-nav {
    display: none;
    align-items: center;
    gap: 0.25rem;
  }

  .nav-list {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color var(--transition);
    white-space: nowrap;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--color-accent);
  }

  .nav-cta {
    margin-left: 1rem;
    padding: 0.625rem 1.25rem;
    font-size: 0.875rem;
  }

  .mobile-cta {
    display: inline-flex;
    padding: 0.5rem 1rem;
    font-size: 0.8125rem;
  }

  /* Hamburger */
  .hamburger {
    display: flex;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
    z-index: 60;
  }

  .hamburger-line {
    display: block;
    width: 24px;
    height: 2px;
    background-color: var(--color-heading);
    transition: all 0.3s ease;
  }

  .hamburger[aria-expanded="true"] .hamburger-line:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .hamburger[aria-expanded="true"] .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .hamburger[aria-expanded="true"] .hamburger-line:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* Mobile nav overlay */
  .header-nav.open {
    display: flex;
    position: fixed;
    inset: 0;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    background-color: var(--color-bg);
    z-index: 55;
  }

  .header-nav.open .nav-list {
    flex-direction: column;
    gap: 0.5rem;
  }

  .header-nav.open .nav-link {
    font-size: 1.25rem;
    padding: 0.75rem 1rem;
  }

  .header-nav.open .nav-cta {
    margin-left: 0;
    margin-top: 1rem;
    font-size: 1rem;
    padding: 0.875rem 2rem;
  }

  /* Desktop */
  @media (min-width: 768px) {
    .header-nav {
      display: flex;
    }

    .hamburger,
    .mobile-cta {
      display: none;
    }
  }

  /* ═══ FADE: thin gold bottom border, gold underline nav hover ═══ */
  :global([data-theme="fade"]) .header.scrolled {
    border-bottom: 1px solid rgba(200, 160, 80, 0.2);
    box-shadow: none;
  }

  :global([data-theme="fade"]) .nav-link {
    position: relative;
  }

  :global([data-theme="fade"]) .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0.75rem;
    right: 0.75rem;
    height: 1px;
    background-color: var(--color-accent);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  :global([data-theme="fade"]) .nav-link:hover::after,
  :global([data-theme="fade"]) .nav-link.active::after {
    transform: scaleX(1);
  }

  :global([data-theme="fade"]) .nav-cta {
    background-color: transparent;
    color: var(--color-accent);
    border: 1px solid var(--color-accent);
  }

  :global([data-theme="fade"]) .nav-cta:hover {
    background-color: var(--color-accent);
    color: #0a0a0a;
  }

  :global([data-theme="fade"]) .mobile-cta {
    background-color: transparent;
    color: var(--color-accent);
    border: 1px solid var(--color-accent);
  }

  /* ═══ CLEAN: pill nav hover backgrounds, no border ═══ */
  :global([data-theme="clean"]) .header.scrolled {
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.06);
    border-bottom: none;
  }

  :global([data-theme="clean"]) .nav-link {
    border-radius: 999px;
    transition: all var(--transition);
  }

  :global([data-theme="clean"]) .nav-link:hover {
    background-color: var(--color-bg-alt);
    color: var(--color-heading);
  }

  :global([data-theme="clean"]) .nav-link.active {
    background-color: var(--color-accent);
    color: white;
  }

  :global([data-theme="clean"]) .nav-cta {
    border-radius: 999px;
  }

  :global([data-theme="clean"]) .mobile-cta {
    border-radius: 999px;
  }

  /* ═══ CHOP: thick bottom border, uppercase nav, sharp CTA ═══ */
  :global([data-theme="chop"]) .header.scrolled {
    border-bottom: 3px solid var(--color-heading);
    box-shadow: none;
  }

  :global([data-theme="chop"]) .nav-link {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 700;
    font-size: 0.8125rem;
  }

  :global([data-theme="chop"]) .nav-link:hover,
  :global([data-theme="chop"]) .nav-link.active {
    color: var(--color-accent);
  }

  :global([data-theme="chop"]) .nav-cta {
    border-radius: 0;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    border: 2px solid var(--color-accent);
  }

  :global([data-theme="chop"]) .nav-cta:hover {
    background-color: white;
    color: var(--color-accent);
  }

  :global([data-theme="chop"]) .mobile-cta {
    border-radius: 0;
    border: 2px solid var(--color-accent);
  }

  :global([data-theme="chop"]) .header-logo-text {
    font-size: 1.5rem;
    letter-spacing: -0.03em;
  }
</style>

<script>
  function initHeader() {
    const header = document.getElementById('site-header');
    const toggle = document.getElementById('menu-toggle');
    const nav = document.getElementById('main-nav');

    if (!header || !toggle || !nav) return;

    // Scroll behavior
    const onScroll = () => {
      header.classList.toggle('scrolled', window.scrollY > 50);
    };
    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();

    // Mobile menu toggle
    toggle.addEventListener('click', () => {
      const isOpen = toggle.getAttribute('aria-expanded') === 'true';
      toggle.setAttribute('aria-expanded', String(!isOpen));
      nav.classList.toggle('open', !isOpen);
      document.body.style.overflow = !isOpen ? 'hidden' : '';
    });

    // Close on nav link click
    nav.querySelectorAll('.nav-link').forEach((link) => {
      link.addEventListener('click', () => {
        toggle.setAttribute('aria-expanded', 'false');
        nav.classList.remove('open');
        document.body.style.overflow = '';
      });
    });

    // Close on escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && nav.classList.contains('open')) {
        toggle.setAttribute('aria-expanded', 'false');
        nav.classList.remove('open');
        document.body.style.overflow = '';
        toggle.focus();
      }
    });
  }

  initHeader();
  document.addEventListener('astro:after-swap', initHeader);
</script>
