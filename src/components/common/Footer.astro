  facebook: 'M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z',
  x: 'M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z',
  youtube: 'M22.54 6.42a2.78 2.78 0 00-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 00-1.94 2A29 29 0 001 11.75a29 29 0 00.46 5.33A2.78 2.78 0 003.4 19.1c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 001.94-2 29 29 0 00.46-5.25 29 29 0 00-.46-5.43z M9.75 15.02l5.75-3.27-5.75-3.27v6.54z',
  yelp: 'M20.16 12.73l-4.27-.93a.5.5 0 00-.57.69l1.92 4.05a.5.5 0 00.84.11l2.43-2.79a.5.5 0 00-.35-.83zM12.5 14.5a.5.5 0 00-.88-.3l-2.78 3.45a.5.5 0 00.28.8l3.64.82a.5.5 0 00.6-.59l-.86-4.18zM8.15 11.83a.5.5 0 00.7-.6L7 7.36a.5.5 0 00-.92.02L4.45 11a.5.5 0 00.4.68l3.3.15zM12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z',
};
---

<footer class="footer">
  <div class="footer-inner container">
    <div class="footer-grid">
      <!-- Brand -->
      <div class="footer-brand">
        <span class="footer-brand-name">{siteTitle}</span>
        {settings?.tagline && (
          <p class="footer-tagline">{settings.tagline}</p>
        )}
      </div>

      <!-- Nav -->
      <nav class="footer-nav" aria-label="Footer navigation">
        <h3 class="footer-heading">Quick Links</h3>
        <ul class="footer-links" role="list">
          {navLinks.map((link) => (
            <li>
              <a href={link.href}>{link.label}</a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Contact -->
      <div class="footer-contact">
        <h3 class="footer-heading">Contact</h3>
        <ul class="footer-links" role="list">
          {phone && (
            <li>
              <a href={`tel:${phone.replace(/\D/g, '')}`}>{phone}</a>
            </li>
          )}
          {email && (
            <li>
              <a href={`mailto:${email}`}>{email}</a>
            </li>
          )}
        </ul>

        {socialLinks.length > 0 && (
          <div class="footer-social">
            {socialLinks.map((social) => (
              <a
                href={social.url || '#'}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Follow on ${social.platform}`}
                class="social-icon"
              >
                <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor" aria-hidden="true">
                  <path d={socialIcons[social.platform] || ''} />
                </svg>
              </a>
            ))}
          </div>
        )}
      </div>
    </div>

    <div class="footer-bottom">
      <p>{footerText}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-bg-alt);
    border-top: 1px solid var(--color-border);
    padding: 4rem 1.5rem 2rem;
    margin-top: auto;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: 1.5fr 1fr 1fr;
    }
  }

  .footer-brand-name {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: var(--heading-weight);
    color: var(--color-heading);
    text-transform: var(--heading-transform);
    letter-spacing: var(--heading-tracking);
  }

  .footer-tagline {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-top: 0.5rem;
  }

  .footer-heading {
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-links a {
    color: var(--color-text);
    font-size: 0.9375rem;
    transition: color var(--transition);
  }

  .footer-links a:hover {
    color: var(--color-accent);
  }

  .footer-social {
    display: flex;
    gap: 0.75rem;
    margin-top: 1.25rem;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 1px solid var(--color-border);
    color: var(--color-text-muted);
    transition: all var(--transition);
  }

  .social-icon:hover {
    color: var(--color-accent);
    border-color: var(--color-accent);
  }

  .footer-bottom {
    border-top: 1px solid var(--color-border);
    margin-top: 3rem;
    padding-top: 1.5rem;
    text-align: center;
  }

  .footer-bottom p {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  /* ═══ FADE: near-black bg, gold top border, square social icons ═══ */
  :global([data-theme="fade"]) .footer {
    background-color: #080808;
    border-top: 1px solid rgba(200, 160, 80, 0.15);
  }

  :global([data-theme="fade"]) .social-icon {
    border-radius: 0.25rem;
    border-color: rgba(200, 160, 80, 0.3);
  }

  :global([data-theme="fade"]) .social-icon:hover {
    border-color: var(--color-accent);
    box-shadow: 0 0 15px rgba(200, 160, 80, 0.15);
  }

  :global([data-theme="fade"]) .footer-bottom {
    border-top-color: rgba(200, 160, 80, 0.1);
  }

  /* ═══ CLEAN: warm light bg, rounded social icons with shadow ═══ */
  :global([data-theme="clean"]) .footer {
    background-color: #faf8f5;
    border-top: none;
  }

  :global([data-theme="clean"]) .social-icon {
    border: none;
    background-color: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    border-radius: 50%;
  }

  :global([data-theme="clean"]) .social-icon:hover {
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
    color: var(--color-accent);
  }

  :global([data-theme="clean"]) .footer-bottom {
    border-top-color: var(--color-border);
  }

  :global([data-theme="clean"]) .footer-heading {
    text-transform: none;
    letter-spacing: normal;
    font-weight: 600;
    color: var(--color-heading);
    font-size: 0.9375rem;
  }

  /* ═══ CHOP: black bg, 4px accent top border, sharp square icons ═══ */
  :global([data-theme="chop"]) .footer {
    background-color: #0a0a0a;
    border-top: 4px solid var(--color-accent);
    color: #d4d4d4;
  }

  :global([data-theme="chop"]) .footer-brand-name {
    color: white;
  }

  :global([data-theme="chop"]) .footer-tagline {
    color: #888;
  }

  :global([data-theme="chop"]) .footer-heading {
    color: var(--color-accent);
    letter-spacing: 0.15em;
    font-weight: 800;
  }

  :global([data-theme="chop"]) .footer-links a {
    color: #d4d4d4;
  }

  :global([data-theme="chop"]) .footer-links a:hover {
    color: var(--color-accent);
  }

  :global([data-theme="chop"]) .social-icon {
    border-radius: 0;
    border-color: #444;
    color: #888;
  }

  :global([data-theme="chop"]) .social-icon:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  :global([data-theme="chop"]) .footer-bottom {
    border-top-color: #222;
  }

  :global([data-theme="chop"]) .footer-bottom p {
    color: #666;
  }
</style>
