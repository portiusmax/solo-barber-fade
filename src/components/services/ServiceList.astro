---
import RichText from '@/components/common/RichText.astro';

interface Service {
  slug: string;
  name: { value?: string } | string;
  description?: any;
  price?: string;
  duration?: string;
  category?: string;
  image?: string | null;
  featured?: boolean;
  sortOrder?: number;
}

interface Props {
  services: Service[];
}

const { services } = Astro.props;

function getServiceName(service: Service): string {
  if (typeof service.name === 'string') return service.name;
  return service.name?.value || service.slug;
}

const categoryLabels: Record<string, string> = {
  haircuts: 'Haircuts',
  beard: 'Beard',
  treatments: 'Treatments',
  packages: 'Packages',
  other: 'Other',
};

const categoryOrder = ['haircuts', 'beard', 'treatments', 'packages', 'other'];

// Group services by category
const grouped = new Map<string, Service[]>();
for (const service of services) {
  const cat = service.category || 'other';
  if (!grouped.has(cat)) {
    grouped.set(cat, []);
  }
  grouped.get(cat)!.push(service);
}

// Sort categories by defined order
const sortedCategories = [...grouped.entries()].sort(
  (a, b) => categoryOrder.indexOf(a[0]) - categoryOrder.indexOf(b[0])
);

// Resolve descriptions
const resolvedDescriptions = new Map<string, any>();
for (const service of services) {
  if (service.description) {
    try {
      const doc = await service.description();
      resolvedDescriptions.set(service.slug, doc);
    } catch {
      // description may already be resolved or unavailable
    }
  }
}
---

<div class="service-categories">
  {sortedCategories.map(([category, categoryServices]) => (
    <div class="category-group reveal" id={`category-${category}`}>
      <div class="category-header">
        <h2 class="category-title">{categoryLabels[category] || category}</h2>
        <span class="category-count">
          {categoryServices.length} {categoryServices.length === 1 ? 'service' : 'services'}
        </span>
      </div>
      <div class="category-divider" aria-hidden="true"></div>
      <ul class="service-list" role="list">
        {categoryServices.map((service) => {
          const name = getServiceName(service);
          const desc = resolvedDescriptions.get(service.slug);
          return (
            <li class="service-item card reveal">
              {service.image && (
                <div class="service-image-wrap">
                  <img
                    src={service.image}
                    alt={name}
                    loading="lazy"
                    class="service-image"
                  />
                </div>
              )}
              <div class="service-content">
                <div class="service-header">
                  <h3 class="service-name">{name}</h3>
                  <div class="service-dots" aria-hidden="true"></div>
                  <span class="service-price">{service.price || ''}</span>
                </div>
                <div class="service-details">
                  {service.duration && (
                    <span class="service-duration">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                        <circle cx="12" cy="12" r="10" />
                        <polyline points="12 6 12 12 16 14" />
                      </svg>
                      {service.duration}
                    </span>
                  )}
                  {service.featured && (
                    <span class="service-badge">Popular</span>
                  )}
                </div>
                {desc && (
                  <div class="service-description">
                    <RichText document={desc} />
                  </div>
                )}
              </div>
            </li>
          );
        })}
      </ul>
    </div>
  ))}
</div>

<style>
  .service-categories {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  /* ── Category headers ── */
  .category-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 1rem;
  }

  .category-title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    margin: 0;
  }

  .category-count {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    white-space: nowrap;
  }

  .category-divider {
    height: 2px;
    background: linear-gradient(
      to right,
      var(--color-accent),
      var(--color-border) 40%,
      transparent
    );
    margin-top: 0.75rem;
    margin-bottom: 1.5rem;
  }

  /* ── Service list ── */
  .service-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* ── Individual service card ── */
  .service-item {
    display: grid;
    grid-template-columns: 1fr;
    background-color: var(--color-surface);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: transform var(--transition), box-shadow var(--transition),
      border-color var(--transition);
  }

  .service-item:has(.service-image-wrap) {
    grid-template-columns: 1fr;
  }

  @media (min-width: 640px) {
    .service-item:has(.service-image-wrap) {
      grid-template-columns: 140px 1fr;
    }
  }

  /* ── Service image ── */
  .service-image-wrap {
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  @media (min-width: 640px) {
    .service-image-wrap {
      aspect-ratio: 1;
      height: 100%;
    }
  }

  .service-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .service-item:hover .service-image {
    transform: scale(1.05);
  }

  /* ── Service content ── */
  .service-content {
    padding: 1.25rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    justify-content: center;
  }

  /* ── Name + dots + price row ── */
  .service-header {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    min-width: 0;
  }

  .service-name {
    font-size: 1.125rem;
    margin: 0;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .service-dots {
    flex: 1;
    min-width: 1rem;
    border-bottom: 2px dotted var(--color-border);
    margin-bottom: 0.25em;
  }

  .service-price {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-accent);
    white-space: nowrap;
    flex-shrink: 0;
  }

  /* ── Duration + badge row ── */
  .service-details {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .service-duration {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .service-duration svg {
    flex-shrink: 0;
    opacity: 0.7;
  }

  .service-badge {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    padding: 0.2em 0.625em;
    border-radius: 999px;
    background-color: var(--color-accent);
    color: white;
    line-height: 1.5;
  }

  /* ── Description ── */
  .service-description {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-top: 0.25rem;
  }

  .service-description :global(.prose) {
    line-height: 1.6;
  }

  .service-description :global(p:last-child) {
    margin-bottom: 0;
  }

  /* ── Responsive: tighter on small screens ── */
  @media (max-width: 639px) {
    .service-content {
      padding: 1rem 1.25rem;
    }

    .service-header {
      flex-wrap: wrap;
    }

    .service-dots {
      display: none;
    }

    .service-price {
      margin-left: auto;
    }
  }

  /* ═══ FADE: Hide images, text-only, gold accents, elegant minimal ═══ */
  :global([data-theme="fade"]) .category-divider {
    background: linear-gradient(
      to right,
      var(--color-accent),
      var(--color-border) 50%,
      transparent
    );
    opacity: 0.5;
    height: 1px;
  }

  :global([data-theme="fade"]) .service-badge {
    background-color: transparent;
    border: 1px solid var(--color-accent);
    color: var(--color-accent);
  }

  :global([data-theme="fade"]) .service-item {
    border: 1px solid var(--color-border);
    border-top: 2px solid var(--color-accent);
  }

  :global([data-theme="fade"]) .service-item:hover {
    border-color: var(--color-accent);
    box-shadow: 0 0 20px rgba(200, 160, 80, 0.08);
  }

  :global([data-theme="fade"]) .service-image-wrap {
    display: none;
  }

  :global([data-theme="fade"]) .service-item:has(.service-image-wrap) {
    grid-template-columns: 1fr;
  }

  :global([data-theme="fade"]) .service-dots {
    border-bottom-color: rgba(200, 160, 80, 0.2);
    border-bottom-style: solid;
  }

  :global([data-theme="fade"]) .service-name {
    letter-spacing: 0.06em;
  }

  /* ═══ CLEAN: Cards with big shadows, rounded, warm badge ═══ */
  :global([data-theme="clean"]) .service-item {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    border-radius: 1.5rem;
    border: none;
  }

  :global([data-theme="clean"]) .service-item:hover {
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
  }

  :global([data-theme="clean"]) .category-divider {
    height: 1px;
    background: var(--color-border);
  }

  :global([data-theme="clean"]) .service-badge {
    border-radius: 999px;
    background: linear-gradient(135deg, var(--color-accent) 0%, #c4785a 100%);
  }

  :global([data-theme="clean"]) .service-image-wrap {
    border-radius: 1.5rem 0 0 1.5rem;
  }

  @media (max-width: 639px) {
    :global([data-theme="clean"]) .service-image-wrap {
      border-radius: 1.5rem 1.5rem 0 0;
    }
  }

  /* ═══ CHOP: Sharp borders, bold pricing, inverted badge ═══ */
  :global([data-theme="chop"]) .service-item {
    border: 2px solid var(--color-heading);
    border-radius: 0;
    transition: all 0.25s ease;
  }

  :global([data-theme="chop"]) .service-item:hover {
    border-color: var(--color-accent);
  }

  :global([data-theme="chop"]) .category-divider {
    height: 3px;
    background: var(--color-heading);
  }

  :global([data-theme="chop"]) .category-title {
    font-size: clamp(1.75rem, 3.5vw, 2.5rem);
    letter-spacing: -0.03em;
  }

  :global([data-theme="chop"]) .service-badge {
    border-radius: 0;
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    font-weight: 800;
  }

  :global([data-theme="chop"]) .service-name {
    font-weight: 800;
    letter-spacing: -0.02em;
  }

  :global([data-theme="chop"]) .service-price {
    font-weight: 800;
    font-size: 1.25rem;
  }

  :global([data-theme="chop"]) .service-image-wrap img {
    filter: grayscale(100%);
    transition: filter 0.35s ease;
  }

  :global([data-theme="chop"]) .service-item:hover .service-image-wrap img {
    filter: grayscale(0%);
  }

  :global([data-theme="chop"]) .service-dots {
    border-bottom-width: 3px;
    border-bottom-color: var(--color-heading);
  }
</style>
