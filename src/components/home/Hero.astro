---
import { getSiteSettings } from '@/lib/keystatic';

interface Props {
  heading?: string;
  subheading?: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage?: string | null;
}

const {
  heading = 'Master Your Look',
  subheading = 'Premium cuts and grooming for the modern gentleman',
  ctaText = 'Book Now',
  ctaLink = '/booking',
  backgroundImage,
} = Astro.props;

// Theme-specific default hero images (used when no CMS image is set)
const settings = await getSiteSettings();
const theme = settings?.theme || 'clean';
const themeHeroDefaults: Record<string, string> = {
  fade: '/images/barber-at-work.jpg',
  clean: '/images/barber-portrait.jpg',
  chop: '/images/barbershop-interior.jpg',
};
const heroSrc = backgroundImage || themeHeroDefaults[theme] || themeHeroDefaults.clean;
---

<section class="hero" aria-label="Hero">
  {heroSrc && (
    <img
      src={heroSrc}
      alt=""
      class="hero-bg"
      loading="eager"
      fetchpriority="high"
    />
  )}
  <div class="hero-overlay"></div>
  <div class="hero-content container">
    <h1 class="hero-heading">{heading}</h1>
    {subheading && <p class="hero-subheading">{subheading}</p>}
    {ctaText && (
      <a href={ctaLink} class="btn btn-primary hero-cta">
        {ctaText}
      </a>
    )}
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 6rem 1.5rem 4rem;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    will-change: transform;
    transform: scale(1.1);
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background-color: var(--color-overlay);
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 800px;
  }

  .hero-heading {
    font-size: clamp(2.5rem, 7vw, 5rem);
    color: #ffffff;
    margin-bottom: 1rem;
    line-height: 1.05;
  }

  .hero-subheading {
    font-size: clamp(1rem, 2vw, 1.375rem);
    color: rgba(255, 255, 255, 0.85);
    max-width: 600px;
    margin: 0 auto 2.5rem;
    line-height: 1.5;
  }

  .hero-cta {
    font-size: 1.0625rem;
    padding: 1rem 2.5rem;
  }

  /* ═══ FADE: Content at bottom-left, gold vertical accent, ghost CTA ═══ */
  :global([data-theme="fade"]) .hero {
    align-items: flex-end;
    justify-content: flex-start;
    padding-bottom: 6rem;
  }

  :global([data-theme="fade"]) .hero-overlay {
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.85) 0%,
      rgba(0, 0, 0, 0.4) 40%,
      rgba(0, 0, 0, 0.2) 100%
    );
  }

  :global([data-theme="fade"]) .hero-content {
    text-align: left;
    max-width: 650px;
    padding-left: 2rem;
    border-left: 1px solid rgba(200, 160, 80, 0.4);
  }

  @media (min-width: 768px) {
    :global([data-theme="fade"]) .hero-content {
      padding-left: 3rem;
    }
  }

  :global([data-theme="fade"]) .hero-heading {
    font-size: clamp(2.25rem, 6vw, 4.5rem);
    letter-spacing: 0.06em;
    font-weight: 700;
  }

  :global([data-theme="fade"]) .hero-subheading {
    margin-left: 0;
    color: rgba(255, 255, 255, 0.6);
    font-size: clamp(0.875rem, 1.5vw, 1.125rem);
    letter-spacing: 0.15em;
    text-transform: uppercase;
  }

  :global([data-theme="fade"]) .hero-cta {
    background-color: transparent;
    color: var(--color-accent);
    border: 1px solid var(--color-accent);
  }

  :global([data-theme="fade"]) .hero-cta:hover {
    background-color: var(--color-accent);
    color: #0a0a0a;
    box-shadow: 0 0 30px rgba(200, 160, 80, 0.3);
  }

  /* ═══ CLEAN: Centered, lighter overlay, pill CTA ═══ */
  :global([data-theme="clean"]) .hero {
    min-height: 90vh;
    min-height: 90dvh;
    align-items: center;
    justify-content: center;
  }

  :global([data-theme="clean"]) .hero-overlay {
    background-color: rgba(0, 0, 0, 0.35);
  }

  :global([data-theme="clean"]) .hero-content {
    text-align: center;
  }

  :global([data-theme="clean"]) .hero-heading {
    font-size: clamp(2.5rem, 6vw, 4.25rem);
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  :global([data-theme="clean"]) .hero-subheading {
    color: rgba(255, 255, 255, 0.75);
    font-size: clamp(1rem, 1.8vw, 1.25rem);
    max-width: 500px;
  }

  :global([data-theme="clean"]) .hero-cta {
    border-radius: 999px;
    background-color: white;
    color: var(--color-heading);
    font-weight: 600;
    padding: 1rem 3rem;
  }

  :global([data-theme="clean"]) .hero-cta:hover {
    background-color: var(--color-accent);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
  }

  /* ═══ CHOP: Oversized heading, left-aligned, blend mode ═══ */
  :global([data-theme="chop"]) .hero {
    align-items: center;
    justify-content: flex-start;
  }

  :global([data-theme="chop"]) .hero-overlay {
    background-color: rgba(0, 0, 0, 0.45);
  }

  :global([data-theme="chop"]) .hero-content {
    text-align: left;
    max-width: 900px;
  }

  :global([data-theme="chop"]) .hero-heading {
    font-size: clamp(3.5rem, 12vw, 8rem);
    line-height: 0.9;
    font-weight: 800;
    letter-spacing: -0.04em;
    mix-blend-mode: difference;
    margin-bottom: 1.5rem;
  }

  :global([data-theme="chop"]) .hero-subheading {
    margin-left: 0;
    font-size: clamp(0.875rem, 1.5vw, 1.0625rem);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: rgba(255, 255, 255, 0.7);
    padding-top: 1.5rem;
    border-top: 4px solid var(--color-accent);
    max-width: 500px;
  }

  :global([data-theme="chop"]) .hero-cta {
    border-radius: 0;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border: 2px solid var(--color-accent);
    padding: 1.125rem 2.75rem;
  }

  :global([data-theme="chop"]) .hero-cta:hover {
    background-color: white;
    color: var(--color-accent);
    transform: none;
  }
</style>

<script>
  function initParallax() {
    const heroBg = document.querySelector('.hero-bg');
    const hero = document.querySelector('.hero');
    if (!heroBg || !hero) return;

    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;

    const theme = document.documentElement.getAttribute('data-theme');
    const speed = theme === 'chop' ? 0.3 : theme === 'fade' ? 0.2 : 0.1;

    const onScroll = () => {
      const rect = hero.getBoundingClientRect();
      if (rect.bottom < 0) return;
      heroBg.style.transform = `scale(1.1) translateY(${window.scrollY * speed}px)`;
    };

    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();
  }

  initParallax();
  document.addEventListener('astro:after-swap', initParallax);
</script>
